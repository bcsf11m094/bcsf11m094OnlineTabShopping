@model EAD_PROJECT_MVC.Models.User

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/CRUDAdminLayout.cshtml";
}

<h2>EditUser</h2>

<div class="row" id="login_div">
    <div class="col-md-offset-3 col-md-6">

        <form method="post"  action="/Account/UpdateUser/@Model.UID">
            
            <input type="text" name="Name" id="sn-name" class="form-control" placeholder="Name" />
            <input type="text" name="Email" id="sn-email" class="form-control" placeholder="Email" />
            <input type="text" name="Password" id="sn-password" class="form-control" placeholder="Password" />
            <a><input type="submit"  value="update" /></a>
        </form>

    </div>
</div>
