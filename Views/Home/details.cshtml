@{   
    Layout = "~/Views/Shared/_header_footer.cshtml";
}

<div class="row">

    <div class="col-md-offset-2 col-md-8 col-md-offset-2">
        <label id="pet_name">French Bully</label>
        <p id="detail-para"> The French Bully is 5 months old. It's weight is about 2 kg. Having soft jaws. Very freindly</p>
    </div>

</div>

<div class="row">

    <div class="col-md-offset-3 col-md-6">
        <img src="~/images/bully.jpg" alt="bully" id="bully" />
    </div>

</div>

<div class="row">

    <div class="col-md-offset-3 col-md-6">        
        <form id="buy-form">
            <label id="pet_name1"> Buy it Online </label>
            <input type="text" id="address" class="form-control" placeholder="Address"/>            

            <div>
                <label id="qty">Qty</label>
                <label id="size">Size</label>
            </div>

           <div >
               
                <select class="selectpicker" id="dropdownMenu1">                    
                        <option id="o1" value="1">1</option>
                        <option id="o2" value="2">2</option>
                        <option id="o3" value="3">3</option>
                </select>

               <select class="selectpicker" id="dropdownMenu2">                    
                        <option value="12">12 inches</option>
                        <option value="16">16inches</option>
                        
                </select>
                              
            </div>
            

            <div>
                <a class="btn" id="order" href="#" onclick="location.href='@Url.Action("Confirmation")'">Order </a>                
             </div>


        </form>
    </div>
</div>
       